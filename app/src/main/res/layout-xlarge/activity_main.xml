<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/primo_numero"
        android:padding="10dp"
        />
    <EditText android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextOperatore1"
        android:hint="0"
        android:padding ="10dp"
        android:background="@color/background_editext"
        android:inputType="numberDecimal"/>


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/secondo_numero"
        android:padding="10dp"
        />
    <EditText android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="0"
        android:id="@+id/editTextOperatore2"
        android:padding ="10dp"
        android:background="@color/background_editext"
        android:inputType="numberDecimal">
    </EditText>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/risultato"
        android:padding="10dp"
        />


    <EditText android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editTextOperatore3"
        android:hint="0"
        android:padding ="10dp"
        android:background="@color/background_editext"
        android:inputType="numberDecimal"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/plusButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+">
        </Button>
        <Button android:id="@+id/minusButton"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        </Button>
        <Button
            android:id="@+id/multiplyButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x" >
        </Button>
        <Button
            android:id="@+id/divideButton"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
           >
        </Button>

    </LinearLayout>
</LinearLayout>
</LinearLayout>